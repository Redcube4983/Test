{
    // 自動保存
    "files.autoSave": "afterDelay",
    // 字下げ
    "editor.tabSize": 2,
    // 行の折り返し表示
    "editor.wordWrap": "on",
    // 言語が日本語であることを表す
    "emmet.variables": {
        "lang": "ja"
    },
    "editor.fontFamily": "Ricty Diminished",
    // VScode全体のフォントサイズ
    "window.zoomLevel": 2,
    // アイコンのコンパクト表示しない
    "explorer.compactFolders": false,
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/css",
            "savePathReplacementPairs": null
        }
    ]
}